<div>
  <div class="login_wrapper">
    <div class="animate form login_form">
      <section class="login_content">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <h1>Cadastrar-se</h1>
          <div>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", placeholder:"Email" %>
          </div>

          <div>
            <%= f.password_field :password, placeholder:"Senha" , class:"form-control"%>
          </div>

          <div>
            <%= f.password_field :password_confirmation, placeholder:"ConfirmaÃ§Ã£o da senha" , class:"form-control"%>
          </div>

          <div>
              <%= f.submit "Cadastrar-se", class:"btn btn-default submit", style:"float: none; margin-left: 0px; width: 80%;" %>
          </div>

          <div class="clearfix"></div>
          <div class="separator"></div>
        <% end %>
      </section>
    </div>
  </div>
</div>